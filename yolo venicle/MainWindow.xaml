<Window
    x:Class="yolo_venicle.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winex="using:WinUIEx"
    Title="YOLO AI Command Center">

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border CornerRadius="20" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1">
                <Grid x:Name="Viewport">
                    <Image x:Name="VehicleFeedImage" Stretch="UniformToFill" Opacity="0" />

                    <Grid x:Name="OfflineOverlay" 
                          Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                          CornerRadius="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE93E;" FontSize="48" 
                                      Foreground="{ThemeResource TextFillColorDisabledBrush}" />
                            <TextBlock Text="SYSTEM STANDBY" Margin="0,10,0,0" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                       FontWeight="Bold" CharacterSpacing="200"/>
                        </StackPanel>
                    </Grid>

                    <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" 
                            Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                            CornerRadius="8" Padding="12,6" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#FF3B30"/>
                            <TextBlock x:Name="StatusLabel" Text="DISCONNECTED" 
                                       FontSize="10" FontWeight="Bold" 
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,24,0,0">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button x:Name="CamPowerBtn" Click="VideoToggleButton_Click" 
                            Padding="16,8" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon x:Name="CamIcon" Glyph="&#xE714;" FontSize="16" Foreground="#FF3B30"/>
                            <TextBlock x:Name="CamText" Text="Camera OFF" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Click="ScreenshotButton_Click" Padding="16,8" CornerRadius="8">
                        <FontIcon Glyph="&#xE722;" />
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                    <Button x:Name="BtnYolo" Click="BtnYolo_Click" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Padding="20,10" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE81E;"/>
                            <TextBlock Text="Detect Objects" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnOcr" Click="BtnOcr_Click" 
                            Background="#AF52DE" Foreground="White" 
                            Padding="20,10" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xEDC6;"/>
                            <TextBlock Text="Read Text" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Column="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1,0,0,0">
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="TELEMETRY LOG" FontSize="11" FontWeight="Bold" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                           CharacterSpacing="150" Margin="0,0,0,20"/>

                <ScrollViewer x:Name="LogScroll" Grid.Row="1">
                    <ItemsControl x:Name="LogList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}" 
                                           FontFamily="Consolas" FontSize="12" Margin="0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="0,20,0,0" Spacing="4">
                    <TextBlock x:Name="AiFeedback" Text="AI Idle" 
                               Foreground="{ThemeResource SystemAccentColor}" FontWeight="Bold"/>
                    <TextBlock x:Name="ConnDetail" Text="Target: 192.168.4.1" 
                               FontSize="10" Foreground="{ThemeResource TextFillColorDisabledBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>